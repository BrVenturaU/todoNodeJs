<div class="row">
    <div class="col-12 col-sm-8 col-md-6 mx-auto">
        <div class="text-center">
            <h1>Editar tarea: {{task.title}}</h1>

            {{#if message}}
            <div class="alert alert-{{alertClass}} alert-dismissible fade show">
                {{message}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{/if}}
        </div>
        <div class="card shadow p-4 rounded-lg">
            <div class="card-body">
                <form action="/tasks/{{task._id}}/update" method="POST">
                    <div class="form-group">
                        <label for="title">Titulo:</label>
                        <input type="text" class="form-control" name="title" id="title" placeholder="Titulo..." value="{{task.title}}">
                    </div>
                    <div class="form-group">
                        <label for="description">Descripción:</label>
                        <textarea name="description" class="form-control" id="description" cols="30" rows="10" placeholder="Descripción...">{{task.description}}</textarea>
                    </div>
                    <div class="form-group">
                        <select class="form-control" name="isFinished" id="isFinished">
                            {{#if task.isFinished}}
                                <option value="0">Pendiente</option>
                                <option value="1" selected>Finalizado</option>
                            {{else}}
                                <option value="0" selected>Pendiente</option>
                                <option value="1">Finalizado</option>
                            {{/if}}
                        </select>
                    </div>
                    <div class="mt-4 text-center">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>