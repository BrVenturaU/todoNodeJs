<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex align-items-center">
            <h1 class="mr-3">Listado de tareas</h1>
            <a href="/tasks/create" class="btn btn-success">Agregar</a>
        </div>
    </div>
</div>

<div class="row">
    {{#unless tasks}}
    <div class="col-12">
        <h3 class="text-muted">No hay tareas disponibles...</h3>
    </div>
    {{/unless}}
    {{#each tasks}}
    <div class="col-12 col-sm-6 col-md-4 mb-5">
        <div class="shadow card rounded-lg">
            <div class="card-header d-flex align-items-center">
                <h2 class="mr-3">{{this.title}}</h2>
                {{#if this.isFinished}}
                <span class="badge badge-success text-white p-2">Finalizado</span>
                {{else}}
                <span class="badge badge-warning text-white p-2">Pendiente</span>
                {{/if}}
            </div>
            <div class="card-body">
                <p class="card-text">
                    {{this.description}}
                </p>
            </div>
            <div class="card-footer">
                <a href="/tasks/{{this._id}}/edit" class="btn btn-warning text-white">Editar</a>
               <form class="d-inline ml-2" action="/tasks/{{this._id}}" method="POST"><button type="submit" class="btn btn-danger">Eliminar</button></form>
            </div>
        </div>
    </div>
    {{/each}}
</div>